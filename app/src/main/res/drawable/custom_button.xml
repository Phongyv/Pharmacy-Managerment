<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Màu khi nhấn -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu nền trắng -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#007BFF"/> <!-- Viền xanh -->
        </shape>
    </item>
</selector>
